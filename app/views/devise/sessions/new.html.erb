<div class="max-w-md mx-auto mt-8 bg-white rounded-md shadow-lg">
  <h2 class="text-2xl font-semibold text-center text-gray-800">Log in</h2>
  <%= form_for(resource, as: resource_name, url: session_path(resource_name), class: "px-6 py-4") do |f| %>
    <div class="mb-4">
      <%= f.label :email, class: "block font-medium text-gray-700" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-full px-4 py-2 mt-2 text-gray-700 border rounded-md focus:outline-none focus:ring-2 focus:ring-blue-600 focus:border-transparent" %>
    </div>

    <div class="mb-4">
      <%= f.label :password, class: "block font-medium text-gray-700" %>
      <%= f.password_field :password, autocomplete: "current-password", class: "w-full px-4 py-2 mt-2 text-gray-700 border rounded-md focus:outline-none focus:ring-2 focus:ring-blue-600 focus:border-transparent" %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="flex items-center mb-4">
        <%= f.check_box :remember_me, class: "mr-2 text-blue-600 border-gray-300 rounded focus:ring-2 focus:ring-blue-600 focus:ring-opacity-50" %>
        <%= f.label :remember_me, class: "text-gray-700 font-medium" %>
      </div>
    <% end %>

    <div class="flex items-center justify-end">
      <%= f.submit "Log in", class: "px-4 py-2 text-white bg-blue-600 rounded-md hover:bg-blue-700 focus:outline-none focus:bg-blue-700" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>

